main.c
#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include <string.h>

#define MAX 100

/* Stack yapısı */
typedef struct {
    char items[MAX];
    int top;
} Stack;

/* Stack fonksiyonları */
void init(Stack *s) {
    s->top = -1;
}

int isEmpty(Stack *s) {
    return s->top == -1;
}

int isFull(Stack *s) {
    return s->top == MAX - 1;
}

void push(Stack *s, char item) {
    if (!isFull(s)) {
        s->items[++s->top] = item;
    }
}

char pop(Stack *s) {
    if (!isEmpty(s)) {
        return s->items[s->top--];
    }
    return '\0';
}

char peek(Stack *s) {
    if (!isEmpty(s)) {
        return s->items[s->top];
    }
    return '\0';
}

/* Operatör önceliği */
int precedence(char op) {
    switch (op) {
        case '^': return 3;
        case '*':
        case '/': return 2;
        case '+':
        case '-': return 1;
    }
    return 0;
}

/* Operatör mü? */
int isOperator(char c) {
    return (c == '+' || c == '-' || c == '*' || c == '/' || c == '^');
}

/* --- Shunting Yard Algoritması --- */
void infixToPostfix(char *infix, char *postfix) {
    Stack s;
    init(&s);
    int j = 0;

    for (int i = 0; infix[i] != '\0'; i++) {

        /* Eğer operand ise direkt postfix'e ekle */
        if (isalnum(infix[i])) {
            postfix[j++] = infix[i];
        }

        /* '(' karakteri stack’e eklenir */
        else if (infix[i] == '(') {
            push(&s, infix[i]);
        }

        /* ')' gelirse '(' görünceye kadar stack boşaltılır */
        else if (infix[i] == ')') {
            while (!isEmpty(&s) && peek(&s) != '(') {
                postfix[j++] = pop(&s);
            }
            pop(&s); // '(' karakterini at
        }

        /* Operatör gelirse */
        else if (isOperator(infix[i])) {
            while (!isEmpty(&s) && precedence(peek(&s)) >= precedence(infix[i])) {
                postfix[j++] = pop(&s);
            }
            push(&s, infix[i]);
        }
    }

    /* Stack'te kalan operatörleri çıkart */
    while (!isEmpty(&s)) {
        postfix[j++] = pop(&s);
    }

    postfix[j] = '\0';
}

/* --- MAIN --- */
int main() {
    char infix[MAX], postfix[MAX];

    printf("Infix ifadeyi giriniz: ");
    scanf("%s", infix);

    infixToPostfix(infix, postfix);

    printf("Postfix ifade: %s\n", postfix);

    return 0;
}
